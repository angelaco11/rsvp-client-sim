public class BaseRestController {
    protected Request request;

    public Response get() {

    }

    public Response post() {

    }
}

public abstract class TestCaseController extends BaseRestController {

}

public class TestCaseControllerV1 extends TestCaseController implements ProductController {

    @Override
    public BaseRestController getProducts(){
        request.path("products");
        return this;
    }
}

public class ProductControlerImpl extends BaseRestController implements ProductController {
    @java.lang.Override
    public BaseRestController getProducts() {
        request.path("products");
        return this;
    }
}

public class ReporterBaseTest {

    public ProductController productController() {
        if (isVersionOne()){
            return create(TestCaseControllerV1.class);
        }
        else {
            return create(ProductControllerImpl.class);
        }
    }
}

public class Driver extends ReporterBaseTest {
    List<String> products = productController().getProducts().get().getJson().toList();
}

public interface ProductController {
    BaseRestController getProducts();
}